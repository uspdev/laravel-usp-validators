{
    "name": "uspdev/laravel-usp-validators",
    "description": "Uma biblioteca contendo validações USPdev",
    "license" : "MIT",
    "authors": [
        {
            "name": "Thiago Gomes Veríssimo",
            "email": "verissimotgv@gmail.com"
        }
    ],
    "require": {
        "illuminate/support": "^6.0 || ^7.0",
        "uspdev/replicado": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Uspdev\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Uspdev\\UspdevValidatorProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "require-dev": {
        "orchestra/testbench": "^4.0 || ^5.0",
        "phpunit/phpunit": "^8.3 || ^9.0"
    }
}
